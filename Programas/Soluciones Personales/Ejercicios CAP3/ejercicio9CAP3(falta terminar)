programa ejercicio9CAP3
areas
  ciudad:AreaC(1,1,100,100)
robots
  robot robot1
  variables
    papeles:numero
    flores:numero
  comenzar
    papeles:=0
    flores:=0
    Pos(1,2)
    derecha
    mientras(HayPapelEnLaEsquina)
      tomarPapel
      papeles:=papeles+1
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      flores:=flores+1
    mientras(PosAv<100)&((papeles<10)&(flores<4))
      mover
      mientras(HayPapelEnLaEsquina)
        tomarPapel
        papeles:=papeles+1
      mientras(HayFlorEnLaEsquina)
        tomarFlor
        flores:=flores+1
  fin
variables
  R-info:robot1
comenzar
  AsignarArea(R-info,ciudad)
  Iniciar(R-info,1,1)
fin