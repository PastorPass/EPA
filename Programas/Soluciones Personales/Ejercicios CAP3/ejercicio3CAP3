programa ejercicio3CAP3
areas
  ciudad:AreaC(1,1,100,100)
robots
  robot robot1
  variables
    esqVacias:numero
  comenzar
    esqVacias:=0
    repetir 99
      mover
      si~(HayFlorEnLaEsquina|HayPapelEnLaEsquina)
        esqVacias:=esqVacias+1
    Informar(esqVacias)
  fin
variables
  R-info:robot1
comenzar
  AsignarArea(R-info,ciudad)
  Iniciar(R-info,1,1)
fin