programa ejercicio4CAP4
areas
  ciudad:AreaC(1,1,100,100)
robots
  robot robot1
  variables
    papeles:numero
    flores:numero
    ok:boolean
  comenzar
    papeles:=3
    flores:=3
    ok:=(flores=3&papeles=3)
    mientras(PosCa<100)
      mover
      mientras(HayFlorEnLaEsquina)
        tomarFlor
        flores:=flores+1
      si(flores=3)
        mientras(HayPapelEnLaEsquina)
          papeles:=papeles+1
      si(flores=3)&(papeles=3)
        Informar(PosCa,PosAv)
      sino
        mover
  fin
variables
  R-info:robot1
comenzar
  AsignarArea(R-info,ciudad)
  Iniciar(R-info,1,1)
fin