programa CAP7ejemplo2
procesos
  proceso SumarFloresEsquina (ES flores:numero)
  variables
    aux:numero
  comenzar
    aux:=0
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      aux:=aux+1
      flores:=flores+1
    repetir aux
      depositarFlor
  fin
  proceso AvenidaConFlores (ES Total:numero)
  variables
    cuantas:numero
  comenzar
    repetir 99
      cuantas:=0
      SumarFloresEsquina(cuantas)
      Total:=Total+cuantas
      mover
    SumarFloresEsquina(cuantas)
    Total:=Total+cuantas
  fin
areas
  ciudad:AreaC(1,1,100,100)
robots
  robot robot1
  variables
    TotalFlores:numero
  comenzar
    TotalFlores:=0
    repetir 99
      AvenidaConFlores(TotalFlores)
      Pos(PosAv+1,1)
    AvenidaConFlores(TotalFlores)
    Informar(TotalFlores)
  fin
variables
  R-info:robot1
comenzar
  AsignarArea(R-info,ciudad)
  Iniciar(R-info,1,1)
fin