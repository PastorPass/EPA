programa CAP7ejemplo1
procesos
  proceso SumarFloresEsquina (ES flores:numero)
  variables
    aux:numero
  comenzar
    aux:=0
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      aux:=aux+1
      flores:=flores+1
    repetir aux
      depositarFlor
  fin
areas
  ciudad:AreaC(1,1,100,100)
robots
  robot robot1
  variables
    TotalFlores:numero
  comenzar
    TotalFlores:=0
    repetir 99
      SumarFloresEsquina(TotalFlores)
      mover
    SumarFloresEsquina(TotalFlores)
    Informar(TotalFlores)
  fin
variables
  R-info:robot1
comenzar
  AsignarArea(R-info,ciudad)
  Iniciar(R-info,1,1)
fin